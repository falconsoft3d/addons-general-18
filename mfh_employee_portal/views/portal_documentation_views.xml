<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_form_portal_documentation" model="ir.ui.view">
            <field name="name">view.form.portal.documentation</field>
            <field name="model">portal.documentation</field>
            <field name="arch" type="xml">
                <form string="Documents">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group string="General">

                                <field name="title"/>
                                <field name="url"/>
                                <field name="doc"/>
                            </group>
                            <group string="Document">
                                <field name="project_id"/>
                            </group>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>


        <record id="view_list_portal_documentation" model="ir.ui.view">
            <field name="name">view.tree.portal.documentation</field>
            <field name="model">portal.documentation</field>
            <field name="arch" type="xml">
                <list string="Portal Documentation"  open_form_view="True">
                    <field name="name" optional="show"/>
                    <field name="title" optional="show" />
                    <field name="url" optional="show"/>
                    <field name="project_id" optional="show"/>
                </list>
            </field>
        </record>

        <record id="action_portal_documentation" model="ir.actions.act_window">
            <field name="name">Documents</field>
            <field name="res_model">portal.documentation</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_list_portal_documentation"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create a new document!
                </p></field>
        </record>

    </data>
</odoo>